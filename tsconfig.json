{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "inlineSourceMap": true,  // for accurate line number logs
    "types": ["node",
      "reflect-metadata"],
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@commands/*": ["commands/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
