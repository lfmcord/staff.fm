{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "inlineSourceMap": true,  // for accurate line number logs
    "types": ["node",
      "reflect-metadata"],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@commands/*": ["src/commands/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./node_modules",
    "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
